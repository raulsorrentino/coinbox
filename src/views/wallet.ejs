    <div id="aInfo" class="container-fluid box info-wallet">
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">
                                Welcome
                                <%= name %>
                            </h3>
                            <a class="nav-link" href="/logout" onclick=""><img id="logout" alt="" width="20" height="20" class="logout-btn"></a>
                        </div>
                        <div class="p-3">
                            <div id="chart"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid footerbox">
        <div class="row">
            <div class="col-md">
                <div class="card">

                    <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                        <li class="nav-item"><a href="#" class="nav-link px-2">Home</a></li>
